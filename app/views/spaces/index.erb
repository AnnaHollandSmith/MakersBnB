<html>
  <head>
    <title>All Spaces | TaarkBnB</title>
  </head>

  <body>

    <h1>Book a Space</h1>

    <form action='/spaces/new' method='get'>

      <input type='submit' value="List a Space">

    </form>

    <ul id='spaces'>
      <% @spaces.each do | space | %>
      <li>
        <%= space.name %>
        <br>
        <%= space.description %>
        <br>
        <%= space.price %>
        <br>
        Available From:
        <%= space.date_from %>
        <br>
        Available To:
        <%= space.date_to %>
      </li>
      <% end %>
    </ul>

  </body>

</html>
